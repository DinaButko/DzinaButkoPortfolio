<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>


<!--Content for the Add page-->
<main class="container">
    <div class="row">
        <div class="offset-md-3 col-md-3">
        <h1><%=title %></h1>

        <form class="form" method="POST">
            <div class="form-group">
                <label for="nametextField">Name</label>
                <input type="text" class="form-control"
                id="nameTextField"
                placeholder="Enter the business contact name"
                name="name" 
                value="<%=contact.name %>"
                required>
            </div>

            
            <div class="form-group">
                    <label for="phoneTextField">Phone</label>
                    <input type="text" class="form-control"
                    id="phoneTextField"
                    placeholder="Enter phone number"
                    name="number"
                    value="<%=contact.number %>"
                    required>
            </div>
                

            <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the email"
                    name="email"
                    value="<%=contact.email %>"
                    required>
            </div>
            <br>
                
        <button class="btn btn-primary" type="submit">
            <i class="fas fa-edit"></i>Submit</button>
            <a href="/contact-list" class="btn btn-warning">
                <i class="fas fa-undo"></i>Cancel</a>
            </form>
        </div>
    <div>
<div>


